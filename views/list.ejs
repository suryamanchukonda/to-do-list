<%- include("header") -%>

  <div class="box" id="heading">
    <h1>
      <%=listTitle%>
    </h1>
  </div>

  <div class="box">
    <%for (var i=0; i<newListItem.length; i++){%>
    <div class="item">
      <input type="checkbox">
      <p>
        <%=newListItem[i]%>
      </p>
    </div>
    <%}%>

    <form class="item" action="/" method="post">
      <input type="text" name="newItem" id="enter" placeholder="New Item" autocomplete="off">
      <button type="submit" name="button">+</button>
    </form>

  </div>

<%- include("footer") -%>
